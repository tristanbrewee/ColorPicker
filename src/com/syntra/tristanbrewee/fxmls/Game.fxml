<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.syntra.tristanbrewee.controllers.GameController">
   <children>
      <BorderPane layoutX="179.0" layoutY="50.0" prefHeight="200.0" prefWidth="200.0">
         <center>
            <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Rectangle fx:id="coloredShape" arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="200.0" stroke="BLACK" strokeType="INSIDE" width="200.0" />
               </children>
            </StackPane>
         </center>
         <bottom>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btnRed" mnemonicParsing="false" text="Red" />
                  <Button fx:id="btnYellow" mnemonicParsing="false" text="Yellow" />
                  <Button fx:id="btnBlue" mnemonicParsing="false" text="Blue" />
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets right="40.0" />
               </padding>
            </HBox>
         </bottom>
         <right>
            <Text fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text="0" BorderPane.alignment="CENTER" fx:id="score">
               <BorderPane.margin>
                  <Insets left="20.0" />
               </BorderPane.margin>
               <font>
                  <Font name="Fira Code Regular" size="36.0" />
               </font>
            </Text>
         </right></BorderPane>
   </children>
</AnchorPane>
